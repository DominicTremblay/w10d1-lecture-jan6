
<%= link_to 'All movies', movies_path%>

<h1>Movie</h1>

<div class="media">

<%= image_tag @movie.image_url %>

  <div class="media-body">
    <h5 class="mt-0 mb-1"><%= @movie.title%></h5>

      <ul>
        <li>Director: <%= @movie.director %></li>
        <li>Runtime: <%= @movie.runtime_in_minutes %> minutes</li>
        <li>Release date: <%= @movie.release_date %></li>
        <li>Description: <%= @movie.description %></li>
      
      </ul>
  </div>
</div>

<h3>Reviews</h3>

<h4>Add a Review</h4>

<%= form_with model: [@movie, @review] do |f| %>

      <% if @review.errors.any? %>
        <div id="error_explanation" class="well">
        <h2>
          <%= pluralize(@movie.errors.count, "error") %> prohibited this movie from
          being saved:
        </h2>

        <ul>
          <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="form-group">
        <%= f.label :rating %>
        <%= f.text_field :rating %>
      </div>

      <div class="form-group">
        <%= f.label :comment %>
        <%= f.text_field :comment %>
      </div>

      <%= f.submit 'Add Review' %>

    <% end  %>

<ul class="list-group-item">

<%= render @reviews %>


</ul>